<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/listitem_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noteadd_detail_tvtitle"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_ghichu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_tieude"
            android:ems="50"
            android:maxLines="1" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noteadd_detail_tvcontent"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_ghichu_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_noidung"
            android:ems="10"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.pa.ipv01.business.DatePicker
            android:id="@+id/lay_datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </com.pa.ipv01.business.DatePicker>

        <com.pa.ipv01.business.TimePicker
            android:id="@+id/lay_timepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </com.pa.ipv01.business.TimePicker>
    </LinearLayout>

</LinearLayout>