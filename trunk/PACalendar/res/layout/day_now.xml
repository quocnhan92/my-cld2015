<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_pre"
            android:layout_width="15.0dip"
            android:layout_height="25.0dip"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_monthyearduong"
            android:background="@drawable/pre" />

        <TextView
            android:id="@+id/tv_monthyearduong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Tháng 02 năm 2015"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffff00" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="15.0dip"
            android:layout_height="25.0dip"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_monthyearduong"
            android:background="@drawable/next" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/icon_so"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/icon_so1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/so2_bt" />

        <ImageView
            android:id="@+id/icon_so2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_so1"
            android:gravity="center"
            android:src="@drawable/so5_bt" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_danhngon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Tôi đi tuy chậm, nhưng sẽ không bao giờ lùi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_ghichu"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_note" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderlayout" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/tab_ghichu"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_chitiet" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thứ 7"
                    android:textColor="#ffff00"
                    android:textSize="18sp" />

                <com.pa.ipv01.customadapter.CustomClock
                    android:id="@+id/digital_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DigitalClock"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_homnay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_homnay" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/tv_hoangdao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ngay Hoàng đạo"
                android:textColor="#ffff00" />

            <TextView
                android:id="@+id/tv_canchiyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm Giáp Ngọ"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_canchimonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tháng Ất Mùi"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_monthnhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tháng nhuận"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vongtron"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_dayam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_montham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="2"
                android:textColor="#fff"
                android:textSize="25sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_convat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/iconmui" />
    </RelativeLayout>

</LinearLayout>