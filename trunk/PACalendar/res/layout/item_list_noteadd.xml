<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/itemlist_noteadd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="@dimen/itemlist_note_title" />

            <TextView
                android:id="@+id/itemlist_noteadd_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorLink="@color/white" />

            <TextView
                android:id="@+id/itemlist_noteadd_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorLink="@color/white" />

            <TextView
                android:id="@+id/itemlist_noteadd_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorLink="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" >

            <Button
                android:id="@+id/itemlist_noteadd_del"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_del" />
        </RelativeLayout>

</RelativeLayout>